<p id="notice"><%= notice %></p>

<h1>Listing Location Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_categories.each do |location_category| %>
      <tr>
        <td><%= location_category.name %></td>
        <td><%= location_category.description %></td>
        <td><%= link_to 'Show', location_category %></td>
        <td><%= link_to 'Edit', edit_location_category_path(location_category) %></td>
        <td><%= link_to 'Destroy', location_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

