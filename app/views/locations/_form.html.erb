<%= form_for @location, :html => { :class => "form-horizontal location" } do |f| %>

  <% if @location.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :zipcode, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :zipcode, :class => 'form-control' %>
    </div>
    <%=f.error_span(:zipcode) %>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
    <%=f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :state, :class => 'form-control' %>
    </div>
    <%=f.error_span(:state) %>
  </div>
  <div class="form-group">
    <%= f.label :about, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :about, :class => 'form-control' %>
    </div>
    <%=f.error_span(:about) %>
  </div>

  <div>
    <p><strong>images:</strong></p>

    <%= f.fields_for :images do |image| %>
      <%= render 'image_fields',f: image %>
    <% end %>
    <%= link_to_add_association "Upload Image", f, :images, class: "btn btn-primary" %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
